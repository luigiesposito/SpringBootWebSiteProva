<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">
	<persistence-unit name="spring" transaction-type="RESOURCE_LOCAL">
		<!-- Persistence provider -->
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

		<!-- Entity classes -->
		<class>it.luigi.spring.DatiMessaggio</class>
		

		<properties>
			<!-- The JDBC URL to the database instance -->
			<property name="javax.persistence.jdbc.url"
				value="jdbc:mysql://localhost/esercizioservlet" />

			<!-- The database username -->
			<property name="javax.persistence.jdbc.user" value="luigi" />

			<!-- The database password -->
			<property name="javax.persistence.jdbc.password" value="gigi" />

			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
		</properties>
	</persistence-unit>
</persistence>